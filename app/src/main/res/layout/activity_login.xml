<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/transparent"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="101dp"
            android:orientation="vertical">
            <ImageView
                android:layout_height="119dp"
                android:layout_width="120dp"
                android:layout_marginTop="21dp"
                android:layout_gravity="center"
                android:background="@drawable/logoh"
                />


            <LinearLayout
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:orientation="vertical" android:background="@android:color/transparent">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="50dp"
                    android:textSize="12dp" android:textColor="#01b0a9"
                    android:text="User name" android:layout_marginRight="40dp"
                    android:layout_marginLeft="45dp"/>


                <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent">

                    <ImageView android:layout_height="wrap_content" android:layout_width="15dp" android:layout_marginTop="35dp" android:scaleType="fitCenter" android:layout_marginStart="12dp" android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp" />

                    <EditText
                        android:layout_height="wrap_content"
                        android:id="@+id/edtUsername"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:textColorHint="@android:color/darker_gray"
                        android:hint="USERNAME"
                        android:singleLine="true"/>

                </RelativeLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12dp"
                    android:textColor="#01b0a9"
                    android:text="Password"
                    android:layout_marginRight="40dp"
                    android:layout_marginLeft="45dp"/>


                <RelativeLayout android:layout_height="wrap_content" android:layout_width="match_parent">

                    <ImageView android:layout_height="wrap_content" android:layout_width="15dp" android:layout_marginTop="35dp"
                        android:scaleType="fitCenter"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"/>

                    <EditText
                        android:layout_height="wrap_content"
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="40dp"
                        android:textColorHint="@android:color/darker_gray" android:hint="PASSWORD" android:singleLine="true" android:inputType="textPassword"/>
                    <TextView
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:text="Forgot Password"
                        android:layout_below="@id/edtPassword"
                        android:textSize="12dp"
                        android:textColor="#01b0a9"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>

            </LinearLayout>

            <Button
                android:layout_height="wrap_content"
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="#01b0a9"
                android:textSize="25dp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:hint="Log in" android:textAlignment="center"/>
            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/txtSignUpNewAc"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:textColor="#01b0a9"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:hint="Register new Account"
                android:textAlignment="center"/>

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>